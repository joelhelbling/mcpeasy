{
  "mcpServers": {
    "slack_poster": {
      "type": "stdio",
      "command": "ruby",
      "args": [
        "./slack_poster.rb",
        "--mcp"
      ],
      "env": {}
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    }
  }
}